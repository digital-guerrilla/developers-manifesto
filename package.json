{
  "name": "developers-manifesto",
  "version": "1.0.0",
  "description": "Developers' Manifesto website",
  "main": "build.js",
  "scripts": {
    "clean": "rm -Rf dist master.zip tmp",
    "compile": "npm run compile:site -s && npm run compile:sass -s && npm run copy -s && npm run readme -s",
    "compile:sass": "node-sass --output-style compressed --output ./dist/styles ./src/styles && npm run postcss",
    "compile:site": "node build.js",
    "copy": "cp src/CNAME dist && cp src/LICENSE dist",
    "download": "npm run clean && wget https://github.com/digital-guerrilla/developers-manifesto/archive/master.zip",
    "postcss": "postcss --use autoprefixer --autoprefixer.browsers 'last 2 versions, ie >= 9, and_chr >= 2.3' ./dist/styles/*.css -d ./dist/styles",
    "readme": "printf '# Readme\n\nThis is generated from the `website` branch - updates to be done in there' > dist/README.md",
    "serve": "npm run clean && npm run download && npm run unzip && nodemon --ext js,json,pug,scss --exec 'npm run compile'",
    "test": "npm run test:lint",
    "test:lint": "eslint ./",
    "unzip": "unzip master.zip && mv developers-manifesto-master tmp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digital-guerrilla/developers-manifesto.git"
  },
  "author": "Simon Emms <simon@simonemms.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/digital-guerrilla/developers-manifesto/issues"
  },
  "homepage": "https://github.com/digital-guerrilla/developers-manifesto#readme",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^6.5.4",
    "bootstrap-sass": "^3.3.7",
    "eslint": "^3.12.2",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.0.0",
    "nodemon": "^1.11.0",
    "postcss-cli": "^2.6.0",
    "pug": "^2.0.0-beta6"
  }
}
