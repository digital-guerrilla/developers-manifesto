doctype html

html.no-js(lang=lang.code)

  head

    title #{ lang.title }

    base(href=baseHref)

    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    link(href="styles/main.css" rel="stylesheet")

  body

    a(href='https://github.com/digital-guerrilla/developers-manifesto')
      img(
        style='position: fixed; top: 0; right: 0; border: 0; z-index: 9999;'
        src='https://camo.githubusercontent.com/652c5b9acfaddf3a9c326fa6bde407b87f7be0f4/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6f72616e67655f6666373630302e706e67'
        alt='Fork me on GitHub'
        data-canonical-src='https://s3.amazonaws.com/github/ribbons/forkme_right_orange_ff7600.png'
      )

    .container

      .row

        .col-xs-12
          ul.nav.nav-tabs.nav-justified
            each language in languages
              li(role='presentation' class=language.code === lang.code ? 'active' : '')
                a(href=language.code) #{ language.local }

      .row

        .col-xs-12 !{ markdown(lang.manifesto) }